<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hover_home_itemDiscount_imgAvt"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/item_home_ActionMenu_discount_avt"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/avt_test"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/item_home_ActionMenu_discount_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/hover_home_itemDiscount_imgAvt"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_discount_khoangCach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5 km"
            android:layout_below="@+id/item_home_ActionMenu_discount_name"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/hover_home_itemDiscount_khoangCach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_toRightOf="@+id/item_home_ActionMenu_discount_khoangCach"
            android:layout_below="@+id/item_home_ActionMenu_discount_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/hover_home_itemDiscount_star"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star_24"
            android:layout_toRightOf="@+id/hover_home_itemDiscount_khoangCach"
            android:layout_below="@+id/item_home_ActionMenu_discount_name"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_discount_danhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0 (1.2k)"
            android:layout_toRightOf="@+id/hover_home_itemDiscount_star"
            android:layout_below="@+id/item_home_ActionMenu_discount_name"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_discount_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 6.00 "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/cChinh"
            android:layout_below="@+id/item_home_ActionMenu_discount_khoangCach"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/hover_home_itemDiscount_tvGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"

            android:layout_toRightOf="@+id/item_home_ActionMenu_discount_gia"
            android:layout_below="@+id/item_home_ActionMenu_discount_khoangCach"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:id="@+id/hover_home_itemDiscount_imgShip"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_shipping_24"
            android:layout_toRightOf="@+id/hover_home_itemDiscount_tvGia"
            android:layout_below="@+id/item_home_ActionMenu_discount_khoangCach"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_discount_phiShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2.00"
            android:layout_toRightOf="@+id/hover_home_itemDiscount_imgShip"
            android:layout_below="@+id/item_home_ActionMenu_discount_khoangCach"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="3dp"
            android:textSize="12dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>