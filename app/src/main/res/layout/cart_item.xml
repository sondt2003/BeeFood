<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">



        <androidx.cardview.widget.CardView
            android:id="@+id/hover_MyCart_item_imgAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/item_home_ActionMenu_MyCart_avt"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/avt_test"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_home_ActionMenu_MyCart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/hover_MyCart_item_imgAvt"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_MyCart_countItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 item"
            android:layout_toRightOf="@+id/hover_MyCart_item_imgAvt"
            android:layout_below="@+id/item_home_ActionMenu_MyCart_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/hover_MyCart_item_tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_toRightOf="@+id/item_home_ActionMenu_MyCart_countItem"
            android:layout_below="@+id/item_home_ActionMenu_MyCart_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="6dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_MyCart_khoangCach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500m"
            android:layout_toRightOf="@+id/hover_MyCart_item_tvItem"
            android:layout_below="@+id/item_home_ActionMenu_MyCart_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:id="@+id/item_home_ActionMenu_MyCart_tongGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.50"
            android:layout_toRightOf="@+id/hover_MyCart_item_imgAvt"
            android:layout_below="@+id/item_home_ActionMenu_MyCart_countItem"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/cChinh"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>