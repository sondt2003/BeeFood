<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginLeft="14dp"
    android:layout_marginBottom="14dp"
    tools:context=".View.Profile.profile_update.Profile_Update_Activity">


    <ImageView
        android:id="@+id/profile_ActionMenu_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_backspace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/profile_ActionMenu_Back"
        android:text="@string/sProfile"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_profileEdit_avatarEdit"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_avatar" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"

            android:hint="NickName"
            app:startIconDrawable="@drawable/ic_account_circle_24">

            <EditText
                android:id="@+id/profile_profileEdit_NickNameEdit"
                android:layout_width="300dp"
                android:layout_height="52dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:hint="FullName"
            app:startIconDrawable="@drawable/ic_person_24">

            <EditText
                android:id="@+id/profile_profileEdit_FullNameEdit"
                android:layout_width="300dp"
                android:layout_height="52dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:hint="Email"
            app:startIconDrawable="@drawable/ic_email_24">

            <EditText
                android:id="@+id/profile_profileEdit_EmailEdit"
                android:layout_width="300dp"
                android:layout_height="52dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:hint="Day/Month/Year"
            app:startIconDrawable="@drawable/ic_date_24">

            <EditText
                android:id="@+id/profile_profileEdit_BirthdayEdit"
                android:layout_width="300dp"
                android:layout_height="52dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/profile_profileEdit_spinner_gender"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/profile_profileUpdate_btnUpdate"
            android:layout_width="380dp"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn"
            android:text="@string/sUpdate"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>