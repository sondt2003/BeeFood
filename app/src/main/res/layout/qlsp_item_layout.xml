<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/qlsp_Item_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">
            <ImageView
                android:id="@+id/qlsp_Item_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avt_test"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/qlsp_Item_btn_Edit"
            android:layout_toRightOf="@id/qlsp_Item_border">
            <TextView
                android:id="@+id/qlsp_Item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Bound Salad"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_below="@id/qlsp_Item_name"
                android:layout_marginTop="8dp"
                android:id="@+id/qlsp_Item_loai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Loáº¡i: "
                android:textSize="18dp" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/qlsp_Item_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1BAB4B"
                android:text="$10.50"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>



        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:id="@+id/qlsp_Item_btn_Delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/qlsp_Item_btn_Edit"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/qlsp_Item_btn_Delete"
            android:src="@drawable/ic_baseline_drive_file_rename_outline_24"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>