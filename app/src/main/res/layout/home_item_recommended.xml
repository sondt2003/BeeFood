<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">



        <androidx.cardview.widget.CardView
            android:id="@+id/hover_home_itemRecommended_imgAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/item_home_ActionMenu_recommended_avt"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/avt_test"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_home_ActionMenu_recommended_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/hover_home_itemRecommended_imgAvt"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_recommended_khoangCach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800m"
            android:layout_toRightOf="@+id/hover_home_itemRecommended_imgAvt"
            android:layout_below="@+id/item_home_ActionMenu_recommended_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/hover_home_itemRecommended_tvKhoangCach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_toRightOf="@+id/item_home_ActionMenu_recommended_khoangCach"
            android:layout_below="@+id/item_home_ActionMenu_recommended_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="6dp"/>

        <ImageView
            android:id="@+id/hover_home_itemRecommended_imgStar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_24"
            android:layout_toRightOf="@+id/hover_home_itemRecommended_tvKhoangCach"
            android:layout_below="@+id/item_home_ActionMenu_recommended_name"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_recommended_danhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.9 (2.3k)"
            android:layout_toRightOf="@+id/hover_home_itemRecommended_imgStar"
            android:layout_below="@+id/item_home_ActionMenu_recommended_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>


        <ImageView
            android:id="@+id/hover_home_itemRecommended_imgShip"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_shipping_24"
            android:layout_toRightOf="@+id/hover_home_itemRecommended_imgAvt"
            android:layout_below="@+id/item_home_ActionMenu_recommended_khoangCach"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/item_home_ActionMenu_recommended_phiShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.50"
            android:layout_toRightOf="@+id/hover_home_itemRecommended_imgShip"
            android:layout_below="@+id/item_home_ActionMenu_recommended_khoangCach"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>