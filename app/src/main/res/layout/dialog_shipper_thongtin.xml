<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_16"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/dialog_shipper_thongTin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đơn"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/bg_dialog_title"/>


    <ImageView
        android:id="@+id/dialog_shipper_thongTin_avtFood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/avt_test"
        android:layout_below="@+id/dialog_shipper_thongTin_title"/>

    <TextView
        android:id="@+id/dialog_shipper_thongTin_nameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:layout_below="@+id/dialog_shipper_thongTin_title"
        android:layout_toEndOf="@+id/dialog_shipper_thongTin_avtFood"/>

    <TextView
        android:id="@+id/dialog_shipper_thongTin_soLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 items"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/dialog_shipper_thongTin_nameFood"
        android:layout_toEndOf="@+id/dialog_shipper_thongTin_avtFood"/>

    <TextView
        android:id="@+id/dialog_shipper_thongTin_soLuong2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/dialog_shipper_thongTin_nameFood"
        android:layout_toEndOf="@+id/dialog_shipper_thongTin_soLuong"/>

    <TextView
        android:id="@+id/dialog_shipper_thongTin_giaTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000000 vnd"
        android:textSize="16sp"
        android:textColor="@color/cChinh"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/dialog_shipper_thongTin_nameFood"
        android:layout_toEndOf="@+id/dialog_shipper_thongTin_soLuong2"/>

    <TextView
        android:id="@+id/dialog_shipper_thongTin_diaChiFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dia chi"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="3"
        android:layout_below="@+id/dialog_shipper_thongTin_soLuong"
        android:layout_toEndOf="@+id/dialog_shipper_thongTin_avtFood"/>


    <TextView
        android:id="@+id/dialog_shipper_thongTin_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_shipper_thongTin_avtFood"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="#8E8E8E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao đến"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/cChinh"
        android:background="@color/cBg"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-40dp"
        android:layout_above="@+id/dialog_shipper_thongTin_line1"/>
<!---->
