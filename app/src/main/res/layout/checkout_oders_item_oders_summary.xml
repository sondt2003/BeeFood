<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/checkout_Orders_Item_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">
            <ImageView
                android:id="@+id/checkout_Orders_Item_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avt_test"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/layout_name_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/checkout_Orders_Item_border">
            <TextView
                android:id="@+id/checkout_Orders_Item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Bound Salad"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/checkout_Orders_Item_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1BAB4B"
                android:text="$10.50"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:gravity="center"
                android:text="1x "
                android:id="@+id/checkout_Orders_Item_SoLuong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bgr_tang_giam_addbasket"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textColor="@color/cChinh"/>

            <ImageView
                android:id="@+id/checkout_Orders_Item_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_drive_file_rename_outline_24"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>